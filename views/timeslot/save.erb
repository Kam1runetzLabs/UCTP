<!DOCTYPE html>
<%#include "timeslot.h" %>
<% tfetch(QVariantMap, timeSlot); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Time Slot</h1>

<%== formTag(urla("save", timeSlot["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="timeSlot[id]" value="<%= timeSlot["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>TimeSlotName<br /><input type="text" name="timeSlot[timeSlotName]" value="<%= timeSlot["timeSlotName"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", timeSlot["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
