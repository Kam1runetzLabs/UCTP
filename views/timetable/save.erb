<h1>Editing Timetable</h1>

<%== formTag(urla("save", timetable["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="timetable[id]" value="<%= timetable["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>ClassroomId<br /><input type="text" name="timetable[classroomId]" value="<%= timetable["classroomId"] %>" /></label>
  </p>
  <p>
    <label>TimeId<br /><input type="text" name="timetable[timeId]" value="<%= timetable["timeId"] %>" /></label>
  </p>
